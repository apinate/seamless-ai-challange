  "homepage": "https://github.com/apinate/seamless-ai-challange#readme",
  "devDependencies": {
    "chai": "4.1.2",
    "mocha": "3.2.0",
    "nodemon": "1.12.1"
  },
  "scripts": {
    "setup": "npm run app:setup && npm run server:setup",
    "test": "CI=true npm run app:test -a && npm run server:test",

    "app:setup": "cd ./app && yarn install",
    "app:run": "cd ./app && yarn start",
    "app:build": "cd ./app && yarn build",
    "app:test": "cd ./app && yarn test",
    "app:lint": "cd ./app && yarn lint",

    "server:setup": "npm i && cd ./server && npm i",
    "server:run": "node server/.",
    "server:run:inspect": "node --inspect server/. ",
    "server:watch": "nodemon --watch './server' -e mjs,js ./server",
    "server:test": "mocha './server/tests/**/*.js' --recursive"
  }
}
